                    android:paddingTop="@dimen/infolay_pading_top">

                    <ImageView
                        android:id="@+id/rgb_perform_img1"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        app:srcCompat="@drawable/rgb_group_main" />
                </LinearLayout>

                <LinearLayout
