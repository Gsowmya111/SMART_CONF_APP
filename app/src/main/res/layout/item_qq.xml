<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_selector">

    <ImageView
        android:id="@+id/img_item_qq"
        android:layout_width="@dimen/listimgwidth"
        android:layout_height="@dimen/listimgheight"
        android:layout_centerInParent="true"
       />

    <TextView
        android:id="@+id/txt_item_qq_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="TextView"
        android:textSize="@dimen/listtxt"
        android:textColor="#A9A9A9"
        android:layout_alignBottom="@+id/img_item_qq"
        android:layout_centerHorizontal="true"
        android:gravity="bottom|center"
        android:paddingBottom="2dp"
         />

