                    android:id="@+id/remote_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:background="@drawable/textbg2"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/infolay_pading_bottom"
                    android:paddingLeft="@dimen/infolay_pading_left"
                    android:paddingTop="@dimen/infolay_pading_top"
                    android:visibility="gone">


                    <ImageView
                        android:id="@+id/remoteimg"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/main_img_hieght"
                        app:srcCompat="@drawable/remote01" />
                </LinearLayout>

                <LinearLayout
