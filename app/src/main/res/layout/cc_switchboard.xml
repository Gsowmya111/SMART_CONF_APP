                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/sb_white"

                        android:orientation="vertical"></LinearLayout>
                </LinearLayout>

                <LinearLayout
