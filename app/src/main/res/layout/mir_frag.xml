<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edisonbro.com.edisonbroautomation.Devices.Pir_Frag">

    <LinearLayout
        android:id="@+id/settingslayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/tvtest2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="mIR"
            android:textSize="@dimen/txt_Headings_all_layout"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/layou_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:padding="2dp"
                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="6dp"
                 >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/sname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:freezesText="false"
                        android:gravity="center"
                        android:letterSpacing="0.1"
                        android:padding="5dp"
                        android:shadowColor="#000"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="2"
                        android:text="Remote Key"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/layout_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/sname"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btns1"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:background="@drawable/btn_bg_p"
                            android:text="S1" />

                        <Button
                            android:id="@+id/btns2"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:background="@drawable/btn_bg_n"
                            android:text="S2" />

                        <Button
                            android:id="@+id/btns3"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:background="@drawable/btn_bg_n"
                            android:text="S3" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/layout_1"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btns4"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:background="@drawable/btn_bg_n"
                            android:text="S4" />

                        <Button
                            android:id="@+id/btns5"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:background="@drawable/btn_bg_n"
                            android:text="S5" />

                        <Button
                            android:id="@+id/btns6"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:background="@drawable/btn_bg_n"
                            android:text="S6" />
                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:padding="2dp"
                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="6dp">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fillViewport="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/swbname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:freezesText="false"
                                android:gravity="center"
                                android:letterSpacing="0.1"
                                android:padding="5dp"
                                android:shadowColor="#000"
                                android:shadowDx="0"
                                android:shadowDy="0"
                                android:shadowRadius="2"
                                android:text="Switchboard"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <RadioGroup
                                android:id="@+id/swbnames"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/swbname">

                                <!--<RadioButton
                                android:id="@+id/swb1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="swb 1" />

                            <RadioButton
                                android:id="@+id/swb2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="swb 2" />

                            <RadioButton
                                android:id="@+id/swb3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="swb 3" />

                            <RadioButton
                                android:id="@+id/swb4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="swb 4" />

                            <RadioButton
                                android:id="@+id/swb5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="swb 5" />

                            <RadioButton
                                android:id="@+id/swb6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="swb 6" />-->
                            </RadioGroup>

                            <TextView
                                android:id="@+id/irresponse"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignBottom="@+id/btnclear"
                                android:layout_alignParentLeft="true"
                                android:layout_alignTop="@+id/btnclear"
                                android:layout_below="@+id/swbnames"
                                android:layout_toLeftOf="@+id/btnclear"
                                android:gravity="center"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <Button
                                android:id="@+id/btnclear"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/swbnames"
                                android:layout_toLeftOf="@+id/btnset"
                                android:text="Clear" />

                            <Button
                                android:id="@+id/btnset"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_below="@+id/swbnames"
                                android:text="Set" />

                            <!-- <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />-->

                        </RelativeLayout>
                    </LinearLayout>
                </ScrollView>


            </android.support.v7.widget.CardView>
        </LinearLayout>

        <TextView
            android:id="@+id/swbnotfound"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/swb_notfound"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:visibility="gone" />

        <!-- <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginBottom="10dp"
             android:layout_marginTop="10dp">

             <Button
                 android:id="@+id/btnset"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentRight="true"
                 android:text="Set" />

             &lt;!&ndash; <RadioGroup
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content" />&ndash;&gt;

         </RelativeLayout>-->

    </LinearLayout>

    <TextView
        android:id="@+id/permision"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/permissiontext"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:visibility="gone" />


</FrameLayout>
