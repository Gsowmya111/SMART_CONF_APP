<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/android_custom_gridview_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:id="@+id/cardcancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="center"
        android:padding="2dp"
        android:layout_margin="5dp"
        card_view:cardBackgroundColor="#fff"

        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="6dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingTop="5dp">

            <ImageView
                android:id="@+id/android_gridview_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/bulb01" />

            <TextView
                android:id="@+id/android_gridview_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/android_gridview_image"
                android:layout_alignStart="@+id/android_gridview_image"

                android:layout_below="@+id/android_gridview_image"
                android:gravity="center"
                android:lines="2"
                android:shadowColor="@color/colorshadow"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"

                android:text="Switch One"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <edisonbro.com.edisonbroautomation.CheckView
                android:id="@+id/check"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"

                android:layout_marginRight="5dp"
                app:checkView_strokeColor="@color/holo_green_dark"
                app:checkView_strokeWidth="2dp" />

            <TextView
                android:id="@+id/flagconf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

        </RelativeLayout>


     </android.support.v7.widget.CardView>
</LinearLayout>