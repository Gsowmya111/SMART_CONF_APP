                android:layout_height="fill_parent"
                android:gravity="center|left"
                android:text="Smart Settings"
                android:textColor="#ffffff"
                android:textSize="@dimen/addhome_text"/>
        </LinearLayout>


        6

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.7"

