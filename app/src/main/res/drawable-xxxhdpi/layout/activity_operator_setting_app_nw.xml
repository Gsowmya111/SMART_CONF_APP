    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5">

            <RadioButton
                android:text="IP Settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rb_ipsettings" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4">

                <RadioButton
                    android:text="User Settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_usersettings" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4">
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:visibility="invisible"
                    android:layout_weight="0.2"
                   />

                <Button
                    android:text="Add User"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:id="@+id/btnadduser"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:background="@drawable/config1"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:visibility="invisible"
                    android:layout_weight="0.2"
                    />
                <Button
                    android:text="Edit User"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnedituser"
                    android:layout_weight="1"
                    android:textColor="#FFFFFF"
                    android:textAllCaps="false"
                    android:background="@drawable/config1"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:visibility="invisible"
                    android:layout_weight="0.2"
                    />
                <Button
                    android:text="Delete User"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/btndeleteuser"
                    android:layout_weight="1"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/config1"
                    android:textAllCaps="false"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:visibility="invisible"
                    android:layout_weight="0.2"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5">

            <RadioButton
                android:text="Configuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rb_configsettings" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5">


            <RadioButton
                android:text="Gateway Settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rb_serversettings" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:visibility="invisible">
            <RadioButton
                android:text="IR Configuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rb_irsettings" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

        </LinearLayout>
